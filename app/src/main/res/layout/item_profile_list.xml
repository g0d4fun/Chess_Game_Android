<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="8dp">
    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/DARK_TILE_COLOR_HEX" />

    <ImageView
        android:id="@+id/item_profile_picture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:src="@drawable/chess_bot" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_profile_game_mode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/julius_sans_one"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="Single Player"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_profile_nickname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/julius_sans_one"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="Bot"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_profile_edit"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="4"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="16dp"
        android:text="Lose"
        android:textStyle="italic" />

    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/DARK_TILE_COLOR_HEX" />
</LinearLayout>